@{
    ViewData["Title"] = "Home page";

}
<main role = "main">
    <div class="container">
        <div class="header-space">
            <h1>KW Fishing HQ</h1>
            <p>Find out all the data to ensure your fishing trips will be successful in Waterloo!</p>
        </div>
    <div class= "map-container">
        <div id="map" style="height: 400px;"></div>
    </div>

    <div class= "current-conditions">
        <h2> Current Conditions For the Conestogo River</h2>
        @* Tables display current conditions for River *@
        <table>
            <tr>
                <th>Current Air Temperature (°C)</th>
                <th>Current Wind Direction and Speed (mph)</th>
                <th>Current Barometric Pressure </th>
                <th>Current Cloud Cover Percentage</th>
                <th>UV Index </th>
                <th>Sunrise Time</th>
                <th>Sun Set</th>
            </tr>
            <tr>  
                @* dummy values for barometric pressure and UV Index, will implement change between F and C for temperature on click *@
                <td>@Model.Temperature </td>
                <td> @Model.Wind </td>
                <td> @Model.Pressure</td>
                <td> @Model.CloudCover </td>
                <td>@Model.UVindex </td>
                <td>@Model.SunRise </td>
                <td> @Model.SunSet </td>
            </tr>
        </table>
        <p>
            Sources: weather wx.com, or https://www.weatherwx.com/forecasts/ca/on/waterloo.html
        </p>
         <div class="fishing-success">
            <h2>Overall Fishing Success for today:</h2>
            <p>[Coming Soon]</p>
        </div>

        <div class="fishing-regulations">
            <h2>Fishing Regulations and Season</h2>
            <p>[Coming Soon]</p>
        </div>
    </div>
</main>
